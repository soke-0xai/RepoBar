{
  "name": "repobar",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "format": "./Scripts/swiftformat.sh",
    "lint": "./Scripts/swiftlint.sh",
    "coverage": "./Scripts/coverage.sh",
    "check": "pnpm format && pnpm lint && pnpm coverage",
    "docs:list": "node Scripts/docs-list.mjs",
    "test": "swift test",
    "build": "swift build",
    "repobar": "swift build --product repobar && ./Scripts/codesign_cli.sh .build/debug/repobar && .build/debug/repobar",
    "repobarcli": "pnpm -s repobar",
    "start": "./Scripts/compile_and_run.sh",
    "restart": "pnpm start",
    "stop": "pkill -f \".build/debug/RepoBar\" || true",
    "codegen": "./Scripts/apollo_codegen.sh",
    "ghql": "pnpm exec tsx Scripts/ghql.ts",
    "ghrest": "pnpm exec tsx Scripts/ghrest.ts"
  },
  "dependencies": {
    "graphql": "^16.12.0"
  },
  "devDependencies": {
    "@octokit/request": "^10.0.7",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv-cli": "^11.0.0",
    "ora": "^9.0.0",
    "tsx": "^4.21.0",
    "zod": "^4.1.13"
  }
}
